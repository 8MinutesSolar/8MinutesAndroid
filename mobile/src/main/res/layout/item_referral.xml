<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/referral_card_view"
  android:layout_height="wrap_content"
  android:layout_width="match_parent"
  android:layout_margin="3sp"
  card_view:cardCornerRadius="6sp"
  card_view:cardElevation="6sp">

  <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:background="@drawable/gradient">

    <ImageView
      android:id="@+id/referral_photo"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_width="wrap_content"
      android:src="@mipmap/ic_account_circle"
      android:layout_alignParentLeft="true"
      android:layout_marginRight="16dp"/>

    <TextView
      android:id="@+id/referral_name"
      android:layout_alignParentTop="true"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@id/referral_photo"
      android:layout_width="wrap_content"
      android:textSize="24sp"
      tools:text="Referral Name"
      android:layout_toRightOf="@id/referral_photo"/>

    <TextView
      android:id="@+id/referral_status"
      android:layout_below="@id/referral_name"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@id/referral_photo"
      android:layout_width="wrap_content"
      tools:text="Referral Status"
      android:layout_toRightOf="@id/referral_photo"/>
  </RelativeLayout>
</android.support.v7.widget.CardView>

