<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/team_card_view"
  android:layout_height="wrap_content"
  android:layout_width="match_parent"
  android:layout_margin="3dp"
  card_view:cardCornerRadius="3dp"
  card_view:cardElevation="6dp">

  <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:background="@drawable/bg_gradient">

    <ImageView
      android:id="@+id/team_photo"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_width="wrap_content"
      android:src="@mipmap/ic_menu"
      android:layout_alignParentLeft="true"
      android:layout_marginRight="16dp"/>

    <TextView
      android:id="@+id/team_name"
      android:layout_alignParentTop="true"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@id/team_photo"
      android:layout_width="wrap_content"
      android:textSize="24sp"
      tools:text="Name"
      android:layout_toRightOf="@id/team_photo"/>

    <TextView
      android:id="@+id/team_description"
      android:layout_below="@id/team_name"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@id/team_photo"
      android:layout_width="wrap_content"
      tools:text="Member Description"
      android:layout_toRightOf="@id/team_photo"/>

    <TextView
      android:id="@+id/team_earnings"
      android:layout_below="@id/team_description"
      android:layout_height="wrap_content"
      android:layout_toEndOf="@id/team_photo"
      android:layout_width="wrap_content"
      tools:text="Rs. 1000"
      android:textSize="18sp"
      android:layout_toRightOf="@id/team_photo"/>


    <TextView
      android:layout_below="@id/team_earnings"
      android:layout_toEndOf="@id/team_photo"
      android:id="@+id/team_installed"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      tools:text="2"
      android:layout_toRightOf="@id/team_photo"/>

    <TextView
      android:layout_below="@id/team_earnings"
      android:id="@+id/team_installed_label"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_toRightOf="@id/team_installed"
      android:layout_toEndOf="@id/team_installed"
      tools:text=" Installed"/>

    <TextView
      android:layout_below="@id/team_installed"
      android:layout_toEndOf="@id/team_photo"
      android:id="@+id/team_progress"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      tools:text="5"
      android:layout_toRightOf="@id/team_photo"/>

    <TextView
      android:layout_below="@id/team_installed_label"
      android:id="@+id/team_progress_label"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_toRightOf="@id/team_installed"
      android:layout_toEndOf="@id/team_installed"
      tools:text=" Progress"/>


    <TextView
      android:layout_below="@id/team_progress"
      android:layout_toEndOf="@id/team_photo"
      android:id="@+id/team_pending"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      tools:text="1"
      android:layout_toRightOf="@id/team_photo"/>

    <TextView
      android:layout_below="@id/team_progress_label"
      android:id="@+id/team_pending_label"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_toRightOf="@id/team_installed"
      android:layout_toEndOf="@id/team_installed"
      tools:text=" Pending"/>


  </RelativeLayout>
</android.support.v7.widget.CardView>

