<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="10dp"
  android:clickable="true"
  card_view:cardCornerRadius="6sp"
  card_view:cardElevation="6sp">


  <com.google.android.youtube.player.YouTubeThumbnailView
    android:id="@+id/youtube_thumbnail"
    android:layout_width="match_parent"
    android:layout_height="192sp"
    android:scaleType="centerCrop"
    android:paddingRight="8sp"
    android:paddingLeft="8sp"
    android:visibility="visible"/>

  <RelativeLayout
    android:id="@+id/youtube_layout"
    android:layout_width="match_parent"
    android:layout_height="192sp"
    android:visibility="visible">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/youtube_title"
      android:gravity="top"/>

    <ImageView
      android:id="@+id/youtube_play"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="center"
      android:src="@mipmap/ic_play_circle"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/youtube_description"
      android:gravity="bottom"/>

  </RelativeLayout>
</android.support.v7.widget.CardView>
